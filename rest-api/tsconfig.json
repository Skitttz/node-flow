{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "ES6",
    "baseUrl": "./src",
    "target": "ES2021",                                 
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                      
    "skipLibCheck": true,                   
    "paths": {
      "@@app/*": ["*"],
      "@@config/*": ["config/*"],
      "@@shared/*": ["shared/*"],
      "@@modules/*": ["modules/*"],
      "@@transactions/*": ["modules/transactions/*"],
    },
    // "outDir": "./build",
    // "rootDir": "./src",
    "allowSyntheticDefaultImports": true,
    "plugins": [
      {
        "name": "typescript-plugin-paths"
      }],
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]  
}
